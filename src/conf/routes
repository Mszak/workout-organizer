# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /home                       controllers.Application.home()

# Users
POST	/users/:id/invite			controllers.UsersController.invite(id: Int)
POST	/users/:id/accept			controllers.UsersController.invite(id: Int)
POST	/users/:id/decline			controllers.UsersController.decline(id: Int)
GET		/users/:id					controllers.UsersController.showUser(id: Int)

# Exercises
GET		/exercises					controllers.ExercisesController.listAllExercises()
POST	/exercises/:exerciseId		controllers.ExercisesController.rate(exerciseId: Int)
GET		/fileterExercises			controllers.ExercisesController.listFileteredExercises()
POST	/showBest					controllers.ExercisesController.showBestResult()

# Gyms
GET		/gyms						controllers.GymsController.listAllGyms()
POST	/gyms/:gymId				controllers.GymsController.rate(gymId: Int)
GET		/gyms/:id					controllers.GymsController.showGym(id: Int)

# Workouts
GET		/workouts					controllers.WorkoutsController.index()
GET		/workouts/new				controllers.WorkoutsController.buildNew()
POST	/workouts					controllers.WorkoutsController.create()
POST 	/workouts/:id/like			controllers.WorkoutsController.like(id: Int)

# Account
GET		/account					controllers.Application.editAccountSettings()
POST	/changeUserInfo				controllers.AccountController.changeUserInfo()

# Sign up and in
GET		/							controllers.Assets.at(path="/public/html", file="login.html")
GET		/login						controllers.Assets.at(path="/public/html", file="login.html")
POST	/register					controllers.SignController.registerUser()
POST	/signin						controllers.SignController.loginUser()
GET 	/logout						controllers.SignController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET  	/javascripts/*file        	controllers.Assets.at(path="/public/javascripts", file)
GET  	/images/*file             	controllers.Assets.at(path="/public/images", file)
GET  	/stylesheets/*file          controllers.Assets.at(path="/public/stylesheets", file)

# React
GET     /react/home/:userId         controllers.Application.home_react(userId: Int)
GET     /react/strangers       controllers.Application.strangers_react()
GET     /react/friendships     controllers.Application.friendsRequests_react()

GET		/react/exercises			controllers.ExercisesController.listAllExercises_react()

GET		/react/gyms					controllers.GymsController.listAllGyms_react()
GET		/react/gyms/:id 			controllers.GymsController.showGym_react(id: Int)
GET		/react/gyms/:gymId/images 	controllers.GymsController.gymThumbnails_react(gymId: Int)
POST	/react/gyms/:gymId			controllers.GymsController.rate_react(gymId: Int)

POST	/react/changePassword		controllers.AccountController.changePassword_react()

GET		/react/workouts				controllers.WorkoutsController.index_react()
POST	/react/workouts				controllers.WorkoutsController.create_react()
POST 	/react/workouts/:id/like	controllers.WorkoutsController.like_react(id: Int)

GET		/react/images/:id/comments	controllers.GymsController.getComments(id: Int)
POST	/react/images/:id/comments	controllers.GymsController.addComment(id: Int)

GET		/react/users/:id			controllers.UsersController.showUser_react(id: Int)
POST	/react/users/:id/invite			controllers.UsersController.invite_react(id: Int)
POST	/react/users/:id/accept			controllers.UsersController.invite_react(id: Int)
POST	/react/users/:id/decline			controllers.UsersController.decline_react(id: Int)

POST	/react/login				controllers.SignController.loginUser_react()
POST	/react/register				controllers.SignController.registerUser_react()
OPTIONS	/*path						controllers.Application.options(path: String)

