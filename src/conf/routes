# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /home                       controllers.Application.home()

# Exercises
GET		/exercises					controllers.Application.listAllExercises()

# Gyms
GET		/gyms						controllers.Application.listAllGyms()

# Account
GET		/account					controllers.Application.editAccountSettings()
POST	/changePassword				controllers.AccountController.changePassword()

# Sign up and in
GET		/							controllers.Assets.at(path="/public/html", file="login.html")
GET		/login						controllers.Assets.at(path="/public/html", file="login.html")
POST	/register					controllers.SignController.registerUser()
POST	/signin						controllers.SignController.loginUser()
GET 	/logout						controllers.SignController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET  	/javascripts/*file        	controllers.Assets.at(path="/public/javascripts", file)
GET  	/images/*file             	controllers.Assets.at(path="/public/images", file)
GET  	/stylesheets/*file          controllers.Assets.at(path="/public/stylesheets", file)
